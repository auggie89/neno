---
interface Props {
  type: "button" | "submit" | "reset"
  href?: string
  class?: string
  color?: "primary" | "secondary"
}

import ArrowRight from "../icons/ArrowRight.astro";
const {class:className, type, href, color} = Astro.props;
const Element = href ? "a" : "button"
---

<Element class:list={[className,"ga-btn", color && `ga-btn-${color}`]} type={type} href={href}>
  <slot />
  <div class="ga-btn__icon">
    <ArrowRight width="24" height="24" />
  </div>
</Element>

<style>
  .ga-btn {
    display: inline-flex;
    height: 3.625rem;
    align-items: center;
    gap: 3rem;
    color: #fff;
    font: 700 1.25rem/1.5 "Signika", Arial, sans-serif;
    border-radius: 3.125rem;
    border: none;
    padding: 0.6875rem 1.25rem 0.6875rem 1.875rem;
    box-shadow: rgba(51,51,51,0.2) 0 0.25rem 0;
  }
  
  .ga-btn-primary { background-color: var(--color-primary); }
  .ga-btn-secondary { background-color: var(--color-secondary); }

  .ga-btn__icon {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.25rem;
    border-radius: 3.125rem;
    border: solid white 0.125rem;
  }

  .ga-btn:hover .ga-btn__icon { background-color: #2DA0AB; }
</style>