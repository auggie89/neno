---
import Container from '../../layouts/Container.astro';
import GlobalStyles from '../GlobalStyles.astro';

const links = [
  {
    label: "About Us",
    href: "/about-us"
  },
  {
    label: "Selected Work",
    href: "/selected-work"
  },
  {
    label: "Our Expertise",
    href: "/our-expertise"
  },
  {
    label: "Our Workflow",
    href: "/our-workflow"
  },
  {
    label: "Contact",
    href: "/contact"
  }
]
---
<nav class="gm-main-nav">
  <h2 class="sr-only">Main Navigation</h2>
  <Container class="display-3xl">
    <ul class="gm-main-nav__list">
      {links.map(link => (
        <li><a href={link.href}>{link.label}</a></li>
      ))}
    </ul>
  </Container>

</nav>
<GlobalStyles />

<style>
  .gm-main-nav {
    display: flex;
    background-color: #242A31;
    opacity: 0.95;
  }
  .gm-main-nav__list {
    display: flex;
    text-transform: uppercase;
    gap: 2rem;
    padding: 1.3rem 0;
    
  }

  .gm-main-nav__list a {
    font-weight: 700;
    color: #f9f9f9;
  }
  .gm-main-nav__list a:hover {
    color: #D51E2D;
  }
</style>